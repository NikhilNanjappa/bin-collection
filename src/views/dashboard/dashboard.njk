{% extends '../layout.njk' %}

{% block pageTitle %}
  {{ t("dashboard:h1") }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-ful">
      <h1 class="govuk-heading-xl">{{ t("dashboard:h1") }}</h1>

      <div class="govuk-panel govuk-panel--confirmation bg-{{pageData.nextBin.color}}">
        <h1 class="govuk-panel__title">
          Your next bin
        </h1>
        <div class="govuk-panel__body">
          {{ pageData.nextBin.readable if pageData.nextBin.readable else pageData.nextBin.date | formatDate }} ({{ pageData.nextBin.color }})
        </div>
      </div>

      <br><br>

      {% for month, dateObj in pageData.groupedDates %}
      <div class="govuk-grid-column-one-half">
        <div class="card">
          <h2>{{ month }}</h2>
          <div class="card-inner-panel">
            {% for date in dateObj %}
              <strong class="govuk-tag bg-{{date.color}} govuk-!-font-size-48 govuk-!-margin-5">
                {{ date.date | formatDate('yyyy-MM-dd', 'd') }}
              </strong>
            {% endfor %}
          </div>
        </div>
      </div>
      {% endfor %}

      <div class="govuk-accordion" data-module="govuk-accordion" id="accordion-default">
        {% for month, dateObj in pageData.groupedDates %}
          <div class="govuk-accordion__section {% if month == pageData.currentMonth %}govuk-accordion__section--expanded{% endif %}">
            <div class="govuk-accordion__section-header">
              <h2 class="govuk-accordion__section-heading">
                <span class="govuk-accordion__section-button" id="{{ month }}">
                  {{ month.substr(0, 3) }}
                </span>
              </h2>
            </div>
            <div id="accordion-default-content-{{ month }}" class="govuk-accordion__section-content" aria-labelledby="{{ month }}">
              {% for date in dateObj %}
                <strong class="govuk-tag bg-{{date.color}} govuk-!-font-size-48 govuk-!-margin-5">
                  {{ date.date | formatDate('yyyy-MM-dd', 'd') }}
                </strong>
              {% endfor %}
            </div>
          </div>
        {% endfor %}
      </div>

